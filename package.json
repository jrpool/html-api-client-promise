{
  "name": "html-api-client-promise",
  "description": "Node request-promise-native client for a specific API that responds with HTML.",
  "author": "Jonathan Pool",
  "license": "MIT",
  "private": false,
  "version": "0.0.0",
  "dependencies": {
    "cheerio": ">=0.22.0",
    "request": ">=2.81.0",
    "request-promise-native": ">=1.0.4"
  },
  "devDependencies": {
    "babel-preset-es2015": ">=6.24.1",
    "babel-register": ">=6.24.1",
    "chai": ">=4.0.2",
    "cpr": ">=2.2.0",
    "eslint": "^4.0.0",
    "mocha": ">=3.4.2"
  },
  "scripts": {
    "lint": "eslint dev/ doc/ test/ ./*.js; exit 0",
    "test": "mocha --compilers js:babel-register test/*.js"
  },
  "bugs": {
    "url": "https://github.com/jrpool/http-api-client.git/issues"
  },
  "homepage": "https://github.com/jrpool/http-api-client.git/index.html",
  "repository": {
    "type": "git",
    "url": "https://github.com/jrpool/http-api-client.git"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "es6": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "arrow-spacing": [
        "error",
        {
          "before": true,
          "after": true
        }
      ],
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-array-constructor": [
        "error"
      ],
      "no-cond-assign": [
        "off"
      ],
      "no-control-regex": [
        "off"
      ],
      "no-console": [
        "off"
      ],
      "no-const-assign": [
        "error"
      ],
      "no-new-object": [
        "error"
      ],
      "no-var": [
        "error"
      ],
      "no-whitespace-before-property": [
        "error"
      ],
      "prefer-const": [
        "warn"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-blocks": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "space-in-parens": [
        "error",
        "never"
      ],
      "space-unary-ops": [
        "error",
        {
          "words": true,
          "nonwords": false
        }
      ],
      "spaced-comment": [
        "error",
        "always",
        {
          "markers": [
            "/",
            "*"
          ]
        }
      ]
    }
  }
}
